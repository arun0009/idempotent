<?xml version="1.0" encoding="UTF-8"?>

<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.arung</groupId>
    <artifactId>idempotent</artifactId>
    <version>1.0.0</version>
    <packaging>pom</packaging>
    <url>https://github.com/arun0009/idempotent</url>
    <name>Idempotent</name>
    <description>Annotation to make services Idempotent</description>
    <scm>
        <url>https://github.com/arun0009/idempotent.git</url>
    </scm>
    <developers>
        <developer>
            <name>Arun Gopalpuri</name>
            <url>https://github.com/arun0009/</url>
            <organizationUrl>https://github.com/arun0009/idempotent</organizationUrl>
        </developer>
    </developers>

    <distributionManagement>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://aws.oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

    <properties>
        <java.version>17</java.version>
    </properties>

    <modules>
        <module>idempotent-core</module>
        <module>idempotent-redis</module>
        <module>idempotent-dynamo</module>
    </modules>

    <dependencies>

    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.4.1</version>
                <executions>
                    <execution>
                        <id>idempotency</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>16</source>
                    <target>16</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>